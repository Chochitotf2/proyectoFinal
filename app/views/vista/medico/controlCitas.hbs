                month = "0" + month;
            if (day < 10)
                day = "0" + day;
            var today = now.getFullYear() + '-' + month + '-' + day;
            $('#fecha').val(today);
            document.getElementById("fecha").min = today;

            $("#fecha").change(function () {
                var medico = document.getElementById("medico").value;
                if (medico == '') {
                    $('#hora').html('');
                } else {
                    envio($(this).val(), medico);
                }
            });


            $("#medico").change(function () {
                if ($(this).val() == '') {
                    $('#hora').html('');
                    $("#consultorio").val('');
                    $("#especialidad").val('');
                } else {
