<script>
    function editar() {

        var url = 'http://localhost:4000/lista/editar';
        $.ajax({
            url: url,
            type: 'GET',
            dataType: 'json',
            success: function (data, textStatus, jqXHR) {

                $.each(data, function (i, element) {
                    $('#nombre').val(element[0].nombre);
                    $('#apellidos').val(element[0].apellido);
                    $('#cedula').val(element[0].cedula);
                    $('#correo').val(element[0].correo);
                    $('#edad').val(element[0].edad);
                    $('#nacionalidad').val(element[0].nacionalidad);
                     $('#telefono').val(element[0].telefono);
                    $('#direccion').val(element[0].direccion);
                    $('#external').val(element[0].external_id);

                     $('#consultorio').val(element[1].nro_consultorio);
                    $('#especialidad').val(element[1].especialidad);



                });

            }, error: function (jqXHR, textStatus, errorThrown) {
                console.log(jqXHR);
            }
        });
    }
    $(document).ready(function () {
        editar();
    });

</script>

