    <script>
        $().ready(function () {
            $("#formulario").validate({
                rules: {
                    nombre: {
                        required: true
                    },
                    apellido: {
                        required: true
                    },
                    edad: {
                        required: true,
                        number: true
                    },
                    nacionalidad: {
                        required: true
                    },
                    consultorio: {
                        required: true
                    },
                    especialidad: {
                        required: true
                    },
                    telefono: {
                        required: true,
                        number: true
                    },
                    direccion: {
                        required: true
                    }
                },
                messages: {
                    nombre: {
                        required: "Es necesario inngresar un nombre "
                    },
                    apellido: {
                        required: "Es necesario inngresar un apellido "
                    },
                    edad: {
                        required: "Ingrese una edad correcta"
                    },
                    nacionalidad: {
                        required: "Ingrese una nacionalidad "
                    },
                    consultorio: {
                        required: "Ingrese un consultorio"
                    },
                    especialidad: {
                        required: "Ingrese una especialidad "
                    },
                    telefono: {
                        required: "Ingrese un telefono"
                    },
                    direccion: {
                        required: "Ingrese una direccion correcta"
                    },
                    medicamento: {
                        required: "Ingrese un medicamento "
                    },
                    duracion: {
                        required: "Ingrese la duracion del tratamiento"
                    },
                    administracion: {
                        required: "Ingrese indicaciones "
                    },
                    tratamiento: {
                        required: "Ingrese indicaciones"
                    },
                    objetivo_tratamiento: {
                        required: "Ingrese el objetivo del tratamiento"
                    }

                }
            });
        });

    </script>

    <script>
        (function () {
            'use strict';

            window.addEventListener('load', function () {
                var form = document.getElementById('needs-validation');
                if (form !== null) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                }
            }, false);
        })();
    </script>


